<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="/svgs.css">
    <link rel="stylesheet" href="/dashboardStyle.css">
    <title><%= title %></title>
    <link rel="icon" href="/favicon.ico" type="image/x-icon">
</head>
<body>
    <div class="global-wrapper">
        <%- include('../partials/navbar', { navLinks, user }) %>
        <div class="content">
            <h1>Your posts</h1>
            <div class="posts-wrapper">
                <% if (postsArr && postsArr.length > 0) { %>
                    <div class="main-content">
                        <% postsArr.forEach(post => { %>
                            <%- include('../partials/post', { post }) %>
                        <% }) %>
                    </div>
                <% } %>
                <a class="btn height-fit-content-btn" href="/user/<%= user.user_id %>/new-post">Create New</a>
            </div>
        </div>
    </div>
    <%- include('../partials/footbar') %>
</body>
</html>